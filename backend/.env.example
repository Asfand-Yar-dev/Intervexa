# =============================================================================
# AI INTERVIEW SYSTEM - BACKEND ENVIRONMENT TEMPLATE
# =============================================================================
# Copy this file to .env and fill in your values
# NEVER commit .env to git!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
PORT=5000
NODE_ENV=development
# NODE_ENV=production  # <-- Set this on your deployment platform

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGO_URI=mongodb://localhost:27017/ai_interview_system
# For production (MongoDB Atlas):
# MONGO_URI=mongodb+srv://<username>:<password>@cluster.mongodb.net/ai_interview_system?retryWrites=true&w=majority

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
# CRITICAL: Change this in production! Use a 64+ char random string.
# Generate one: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CHANGE_ME_IN_PRODUCTION_use_crypto_randomBytes_64
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# =============================================================================
# PASSWORD HASHING
# =============================================================================
# Architecture doc specifies cost 12+. Higher = more secure but slower.
BCRYPT_SALT_ROUNDS=12

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# For development:
CORS_ORIGIN=http://localhost:3000
# For production (comma-separated for multiple origins):
# CORS_ORIGIN=https://yourdomain.com,https://www.yourdomain.com

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
# Stricter rate limiting for auth endpoints:
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=10

# =============================================================================
# FILE UPLOAD
# =============================================================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# =============================================================================
# GOOGLE OAUTH CONFIGURATION
# =============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# PHASE 5: AI SERVICE CONFIGURATION
# =============================================================================
# Python AI microservice URL
# Master toggle â€” set to 'true' to enable real AI (requires all services below)
USE_REAL_AI=false
AI_SERVICE_URL=http://localhost:8000
AI_SERVICE_API_KEY=your-ai-service-api-key
AI_SERVICE_TIMEOUT=30000
AI_SERVICE_MAX_RETRIES=3

# Webhook secret for server-to-server AI result delivery
AI_WEBHOOK_SECRET=your-webhook-secret-change-in-production

# Individual AI service toggles (set to 'true' to use real AI)
USE_NLP_AI=false
NLP_AI_ENDPOINT=
NLP_AI_API_KEY=

USE_VOCAL_AI=false
VOCAL_AI_ENDPOINT=
VOCAL_AI_API_KEY=

USE_FACIAL_AI=false
FACIAL_AI_ENDPOINT=
FACIAL_AI_API_KEY=

# =============================================================================
# PHASE 6: PRODUCTION CONFIGURATION
# =============================================================================
# Logging
LOG_LEVEL=info
# LOG_DIR=/var/log/ai-interview/  # Uncomment for production

# AWS S3 (for production file storage instead of local)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_REGION=us-east-1
# S3_BUCKET_NAME=ai-interview-uploads

# Redis (for caching and session management)
# REDIS_URL=redis://localhost:6379

# Sentry (for error tracking)
# SENTRY_DSN=https://your-sentry-dsn

# CSRF Protection (only for cookie-based auth flows)
# CSRF_SECRET=your-csrf-secret-32chars-min

# New Relic (for performance monitoring)
# NEW_RELIC_LICENSE_KEY=